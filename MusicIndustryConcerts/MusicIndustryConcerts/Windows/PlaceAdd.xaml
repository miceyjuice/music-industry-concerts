<Page x:Class="MusicIndustryConcerts.Windows.PlaceAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MusicIndustryConcerts.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="ArtistAdd">

    <Grid>
        <Rectangle x:Name="artistExplicitContent" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="400" Stroke="Black" VerticalAlignment="Stretch" Width="800"/>
        <Button Content="ADD" Margin="0,337,0,29" Height="34" Width="280" FontFamily="Poppins" Click="Button_Click" Background="#4277d4" Foreground="#fff" BorderBrush="#4277d4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="placeNameInput" Height="23" Margin="72,127,448,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="280" BorderBrush="#4277d4" HorizontalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="72,104,0,0" TextWrapping="Wrap" Text="Place name" VerticalAlignment="Top" FontFamily="Poppins"/>
        <TextBlock HorizontalAlignment="Left" Margin="72,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Poppins" Text="Capacity"/>
        <TextBlock HorizontalAlignment="Left" Margin="260,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Poppins"><Run Text="Performance "/><Run Text="price"/></TextBlock>
        <TextBox x:Name="artistPerformancePriceInput" HorizontalAlignment="Center" Margin="0,261,0,112" TextWrapping="Wrap" VerticalAlignment="Center" Width="281" BorderBrush="#4277d4" Height="23"/>
        <CheckBox x:Name="artistExplicitContentInput" Content="Explicit content" HorizontalAlignment="Center" Margin="-134,305,0,0" VerticalAlignment="Top" FontFamily="Poppins" IsChecked="false" BorderBrush="#4277d4" Width="144" MinWidth="144"/>
        <CheckBox x:Name="artistAvailabilityInput" Content="Artist availability" HorizontalAlignment="Center" Margin="0,305,-159,0" VerticalAlignment="Top" FontFamily="Poppins" IsChecked="false" BorderBrush="#4277d4"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,50,0,0" TextWrapping="Wrap" Text="ADD A PLACE" VerticalAlignment="Top" FontFamily="Poppins" FontSize="24"></TextBlock>

    </Grid>
</Page>
